{
  "id": "baile-haproxy",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "docker-registry.marathon.l4lb.thisdcos.directory:10005/deepcortex/baile-haproxy:${DOCKER_IMAGE_VERSION}",
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0,
          "containerPort": 80,
          "servicePort": 10000,
          "labels": {
            "VIP_0": "/baile-haproxy:80"
          }
        },
        { "hostPort": 0,
          "containerPort": 80,
          "servicePort": 10001
        }
      ],
      "forcePullImage":true
    }
  },
  "env": {
    "S3_BUCKET": "${S3_BUCKET}",
    "BAILE_ADDRESS": "${BAILE_ADDRESS}"
  },
  "instances": ${SRV_INSTANCES},
  "cpus": ${SRV_CPUS},
  "mem": ${SRV_MEM},
  "constraints": [
      [
        "hostname",
        "UNIQUE"
      ],
      [
        "cluster",
        "UNLIKE",
        "gpu"
      ]
    ],
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/api/insilico/v1.4/healthCheck",
    "portIndex": 0,
    "timeoutSeconds": 10,
    "gracePeriodSeconds": 10,
    "intervalSeconds": 2,
    "maxConsecutiveFailures": 10
  }],
  "labels":{
    "HAPROXY_GROUP":"external",
    "HAPROXY_0_VHOST":"${BAILE_LB_URL}",
    "HAPROXY_1_VHOST":"${BAILE_INTERNAL_LB_URL}"
  },
  "upgradeStrategy": {
    "maximumOverCapacity": 1,
    "minimumHealthCapacity": 0.5
  }
}
