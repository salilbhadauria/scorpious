{
  "id": "taurus",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "deepcortex/taurus:${DOCKER_IMAGE_VERSION}",
      "network": "BRIDGE",
      "portMappings": [
        {
          "hostPort": 0,
          "containerPort": 9000,
          "labels": {
            "VIP_0": "/taurus:9000"
          }
        },
        {
          "hostPort": 0,
          "containerPort": 2552
        }
      ],
      "parameters": [
        { "key": "env", "value": "RABBIT_HOSTS=${RABBIT_HOSTS}" },
        { "key": "env", "value": "RABBIT_USERNAME=${RABBIT_USERNAME}" },
        { "key": "env", "value": "RABBIT_PASSWORD=${RABBIT_PASSWORD}" },
        { "key": "env", "value": "CORTEX_REST_URL=${CORTEX_REST_URL}" },
        { "key": "env", "value": "CORTEX_REST_VERSION=${CORTEX_REST_VERSION}" },
        { "key": "env", "value": "CORTEX_USERNAME=${CORTEX_USERNAME}" },
        { "key": "env", "value": "CORTEX_PASSWORD=${CORTEX_PASSWORD}" },
        { "key": "env", "value": "BAILE_REST_URL=${BAILE_REST_URL}" },
        { "key": "env", "value": "BAILE_REST_VERSION=${BAILE_REST_VERSION}" },
        { "key": "env", "value": "BAILE_USERNAME=${BAILE_USERNAME}" },
        { "key": "env", "value": "BAILE_PASSWORD=${BAILE_PASSWORD}" },
        { "key": "env", "value": "ARIES_REST_URL=${ARIES_REST_URL}" },
        { "key": "env", "value": "ARIES_REST_VERSION=${ARIES_REST_VERSION}" },
        { "key": "env", "value": "ARIES_USERNAME=${ARIES_USERNAME}" },
        { "key": "env", "value": "ARIES_PASSWORD=${ARIES_PASSWORD}" },
        { "key": "env", "value": "S3_ACCESS_KEY=${S3_ACCESS_KEY}" },
        { "key": "env", "value": "S3_SECRET_KEY=${S3_SECRET_KEY}" },
        { "key": "env", "value": "S3_REGION=${S3_REGION}" },
        { "key": "env", "value": "S3_BUCKET=${S3_BUCKET}" },
        { "key": "env", "value": "STREAM_ID=${STREAM_ID}" },
        { "key": "env", "value": "ARGO_HOST=${ARGO_HOST}" },
        { "key": "env", "value": "ARGO_PORT=${ARGO_PORT}" },
        { "key": "env", "value": "ARGO_API_VERSION=${ARGO_API_VERSION}" },
        { "key": "env", "value": "ARGO_USERNAME=${ARGO_USERNAME}" },
        { "key": "env", "value": "ARGO_PASSWORD=${ARGO_PASSWORD}" },
        { "key": "env", "value": "SQS_ACCESS_KEY=${SQS_ACCESS_KEY}" },
        { "key": "env", "value": "SQS_SECRET_KEY=${SQS_SECRET_KEY}" },
        { "key": "env", "value": "SQS_REGION=${SQS_REGION}" },
        { "key": "env", "value": "SQS_QUEUE_NAME=${SQS_QUEUE_NAME}" },
        { "key": "env", "value": "AKKA_PERSISTENCE_JOURNAL_PATH=${AKKA_PERSISTENCE_JOURNAL_PATH}" }
      ],
      "forcePullImage": true
    }
  },
  "instances": ${SRV_INSTANCES},
  "cpus": ${SRV_CPUS},
  "mem": ${SRV_MEM},
  "constraints": [
      [
        "hostname",
        "UNIQUE"
      ],
      [
        "cluster",
        "UNLIKE",
        "gpu"
      ]
    ],
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/v1/health",
    "portIndex": 0,
    "timeoutSeconds": 10,
    "gracePeriodSeconds": 10,
    "intervalSeconds": 2,
    "maxConsecutiveFailures": 10
  }],
  "upgradeStrategy": {
    "maximumOverCapacity": 1,
    "minimumHealthCapacity": 0.5
  }
}