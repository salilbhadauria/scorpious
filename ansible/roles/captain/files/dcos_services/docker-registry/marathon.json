{
  "id": "docker-registry",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "registry:2",
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0,
          "containerPort": 5000,
          "labels": {
            "VIP_0": "/docker-registry:80"
          }
        }
      ]
    }
  },
  "instances": 1,
  "cpus": 1,
  "mem": 1024,
  "constraints": [
      [
        "cluster",
        "UNLIKE",
        "gpu"
      ]
    ],
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/v2/_catalog",
    "portIndex": 0,
    "timeoutSeconds": 10,
    "gracePeriodSeconds": 10,
    "intervalSeconds": 2,
    "maxConsecutiveFailures": 10
  }],
  "upgradeStrategy": {
    "maximumOverCapacity": 1,
    "minimumHealthCapacity": 0.5
  }
}