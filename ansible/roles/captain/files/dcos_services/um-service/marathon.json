{
  "id": "um-service",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "deepcortex/um-service:${DOCKER_IMAGE_VERSION}",
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0,
          "containerPort": 9000,
          "servicePort": 10000,
          "labels": {
            "VIP_0": "/um-service:9000"
          }
        }
      ],
      "parameters": [
        { "key": "env", "value": "MONGODB_URI=${MONGODB_URI}" },
        { "key": "env", "value": "EMAIL_ON=${EMAIL_ON}" }
      ],
      "forcePullImage": true
    }
  },
  "instances": ${SRV_INSTANCES},
  "cpus": ${SRV_CPUS},
  "mem": ${SRV_MEM},
  "constraints": [
      [
        "hostname",
        "UNIQUE"
      ]
    ],
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/api/um-service/v0.1/healthCheck",
    "portIndex": 0,
    "timeoutSeconds": 10,
    "gracePeriodSeconds": 10,
    "intervalSeconds": 2,
    "maxConsecutiveFailures": 10
  }],
  "labels":{
    "HAPROXY_GROUP":"external",
    "HAPROXY_0_VHOST":"${UM_SERVICE_LB_URL}"
  }
}