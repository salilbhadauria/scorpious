{
  "id": "orion-api-rest",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "deepcortex/orion-api-rest:${DOCKER_IMAGE_VERSION}",
      "network": "BRIDGE",
      "portMappings": [
        {
          "hostPort": 0,
          "containerPort": 9000,
          "labels": {
            "VIP_0": "/orion-api-rest:9000"
          }
        },
        {
          "hostPort": 0,
          "containerPort": 2552
        }
      ],
      "parameters": [
        { "key": "env", "value": "HTTP_SEARCH_USER_NAME=${HTTP_SEARCH_USER_NAME}" },
        { "key": "env", "value": "HTTP_SEARCH_USER_PASSWORD=${HTTP_SEARCH_USER_PASSWORD}" },
        { "key": "env", "value": "ZOOKEEPER_URL=${ZOOKEEPER_URL}" },
        { "key": "env", "value": "RABBIT_HOSTS=${RABBIT_HOSTS}" },
        { "key": "env", "value": "RABBIT_USERNAME=${RABBIT_USERNAME}" },
        { "key": "env", "value": "RABBIT_PASSWORD=${RABBIT_PASSWORD}" },
        { "key": "env", "value": "MARATHON_CLIENT_MARATHON_ENDPOINT=${MARATHON_CLIENT_MARATHON_ENDPOINT}" },
        { "key": "env", "value": "JOB_MASTER_START_TIMEOUT=${JOB_MASTER_START_TIMEOUT}" },
        { "key": "env", "value": "JOB_MASTER_HEARTBEAT_TIMEOUT=${JOB_MASTER_HEARTBEAT_TIMEOUT}" },
        { "key": "env", "value": "JOB_MASTER_DOCKER_IMAGE=${JOB_MASTER_DOCKER_IMAGE}" },
        { "key": "env", "value": "JOB_MASTER_MESOS_MASTER_ADDRESS=${JOB_MASTER_MESOS_MASTER_ADDRESS}" },
        { "key": "env", "value": "JOB_MASTER_HDFSNN_ADDRESS=${JOB_MASTER_HDFSNN_ADDRESS}" },
        { "key": "env", "value": "JOB_MASTER_CPUS=${JOB_MASTER_CPUS}" },
        { "key": "env", "value": "JOB_MASTER_MEMORY=${JOB_MASTER_MEMORY}" },
        { "key": "env", "value": "JOB_MASTER_INSTANCES=${JOB_MASTER_INSTANCES}" },
        { "key": "env", "value": "JOB_MASTER_S3_ACCESS_KEY=${JOB_MASTER_S3_ACCESS_KEY}" },
        { "key": "env", "value": "JOB_MASTER_S3_SECRET_KEY=${JOB_MASTER_S3_SECRET_KEY}" },
        { "key": "env", "value": "JOB_MASTER_S3_REGION=${JOB_MASTER_S3_REGION}" },
        { "key": "env", "value": "JOB_MASTER_S3_BUCKET=${JOB_MASTER_S3_BUCKET}" }
      ],
      "forcePullImage": true
    }
  },
  "instances": ${SRV_INSTANCES},
  "cpus": ${SRV_CPUS},
  "mem": ${SRV_MEM},
  "constraints": [
      [
        "hostname",
        "UNIQUE"
      ]
    ],
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/v1/health",
    "portIndex": 0,
    "timeoutSeconds": 10,
    "gracePeriodSeconds": 10,
    "intervalSeconds": 2,
    "maxConsecutiveFailures": 10
  }]
}